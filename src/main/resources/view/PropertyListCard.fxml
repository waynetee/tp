<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
      <padding>
        <Insets top="5" right="5" bottom="5" left="15" />
      </padding>
      <HBox spacing="5" alignment="CENTER_LEFT">
        <Label fx:id="id" styleClass="cell_big_label">
          <minWidth>
            <!-- Ensures that the label text is never truncated -->
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>
        <Label fx:id="name" wrapText="true" styleClass="cell_big_label" text="\$first" />
      </HBox>
      <FlowPane fx:id="tags" minWidth="0" styleClass="tags" />
      <Label fx:id="price" styleClass="cell_small_label, price" text="\$price" />
      <Label fx:id="address" wrapText="true" styleClass="cell_small_label" text="\$address" />
      <FlowPane hgap="5.0" minWidth="0">
        <children>
          <Label fx:id="seller" wrapText="true" styleClass="cell_small_label" text="\$seller" />
          <Label fx:id="phone" wrapText="true" styleClass="cell_small_label" text="\$phone" />
          <Label fx:id="email" wrapText="true" styleClass="cell_small_label" text="\$email" />
        </children>
      </FlowPane>
      </VBox>
      <rowConstraints>
         <RowConstraints />
      </rowConstraints>
  </GridPane>
</HBox>
